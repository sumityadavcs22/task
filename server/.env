# ==============================================
# EVENT BOOKING SYSTEM - ENVIRONMENT VARIABLES
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eventbooking

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex_at_least_32_characters
JWT_EXPIRES_IN=7d

# Client Configuration (for CORS)
CLIENT_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=7200000

# File Upload Configuration (Optional)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp


# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Pagination Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Booking Configuration
MAX_TICKETS_PER_BOOKING=10
BOOKING_EXPIRY_MINUTES=15
CANCELLATION_DEADLINE_HOURS=24

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false


# Development Configuration
DEBUG=true
ENABLE_CORS=true
TRUST_PROXY=false

